<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:background="@color/colorPrimary"
tools:context="makletna.dev.makletna.Login">

<LinearLayout
    android:paddingTop="90dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:id="@+id/linearLayout2">

    <ImageView
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logoo"/>

    <EditText
        android:id="@+id/edtPhone"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"
        android:textColor="@android:color/white"
        android:background="@color/overlayBackground"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textSize="22dp"
        android:layout_centerInParent="true"
        android:layout_margin="1dp"
        android:gravity="center"
        android:hint="@string/phone"
        android:inputType="phone" />




    <EditText
        android:id="@+id/edtPassword"
        android:backgroundTint="@color/white"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textSize="22dp"
        android:background="@color/overlayBackground"
        android:textColorHint="@color/white"
        android:layout_margin="1dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:text="تسجيل الدّخول" />


        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true">

        <com.rey.material.widget.CheckBox
            android:id="@+id/chkRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Material.Drawable.CheckBox"
            android:text="تذكير و عدم الخروج"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            app:cbd_strokeColor="@android:color/white"
            app:cbd_tickColor="@color/colorPrimaryDark"/>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtForgotPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_weight="1"
            android:text="@string/forgotpwd"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="20dp"
        android:text="@string/linksignup"
        android:textAlignment="center"
        android:textColor="@android:color/white"/>

</LinearLayout>
</RelativeLayout>
