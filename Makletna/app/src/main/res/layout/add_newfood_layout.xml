<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الرّجاء أدخل المعلومات بدقّة"
            android:textStyle="bold"
            android:paddingBottom="20dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>

        <EditText
        android:id="@+id/edtNameF"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:background="@color/overlayBackground"
        android:layout_width="300dp"
        android:layout_height="45dp"
            android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_margin="1dp"
        android:gravity="center"
        android:hint="اسم الطّبق"
        android:inputType="text" />

        <EditText
            android:id="@+id/edtDesc"
            android:backgroundTint="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:background="@color/overlayBackground"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"
            android:gravity="center"
            android:hint="نبذة عن الطّبق"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/edtPrice"
            android:backgroundTint="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:background="@color/overlayBackground"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"
            android:gravity="center"
            android:hint="المكوّنات"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/edtDiscount"
            android:backgroundTint="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:background="@color/overlayBackground"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"
            android:gravity="center"
            android:hint="طريقة التّحضير"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="ٱختر صورة" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="حمّل الصّورة" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>